<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DetailsOfDeviceActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/device_running_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/warn_light"/>

        <TextView
            android:id="@+id/device_running_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/warn_light_normal"
            android:layout_toRightOf="@id/device_running_light"
            android:text="正常"
            android:textSize="@dimen/small_text_size"/>

    </RelativeLayout>
</LinearLayout>