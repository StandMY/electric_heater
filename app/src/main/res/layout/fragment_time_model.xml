<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/time_frag_padding"
    android:layout_marginTop="@dimen/item_margin_top"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/btn_background"
        android:layout_marginLeft="@dimen/frag_margin_left"
        android:text="1时段:"
        android:textSize="@dimen/big_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/item_padding_left"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/item_margin_top">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始:"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size" />

        <Spinner
            android:layout_width="@dimen/small_spinner_width"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/small_spinner_margin_left"
            android:entries="@array/hour_select"
            android:text="00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_black"/>

        <Spinner
            android:layout_width="@dimen/small_spinner_width"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/small_spinner_margin_left"
            android:entries="@array/minute"
            android:text="00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/item_padding_left"
        android:layout_marginTop="@dimen/item_margin_top"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束:"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_black"/>

        <Spinner
            android:layout_width="@dimen/small_spinner_width"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/small_spinner_margin_left"
            android:entries="@array/hour_select"
            android:text="00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_black"/>

        <Spinner
            android:layout_width="@dimen/small_spinner_width"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/small_spinner_margin_left"
            android:entries="@array/minute"
            android:text="00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_top"
        android:gravity="center"
        android:paddingLeft="@dimen/item_padding_left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温度:"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size" />

        <Spinner
            android:id="@+id/temperature_picker"
            android:layout_marginLeft="@dimen/big_spinner_margin_left"
            android:layout_marginRight="@dimen/big_spinner_margin_right"
            android:layout_width="@dimen/big_spinner_width"
            android:layout_height="match_parent"
            android:entries="@array/tempare_select"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="℃"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_top"
        android:paddingLeft="@dimen/item_padding_left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温差:"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size" />

        <Spinner
            android:id="@+id/temper_differ_picker"
            android:layout_marginLeft="@dimen/big_spinner_margin_left"
            android:layout_marginRight="@dimen/big_spinner_margin_right"
            android:layout_width="@dimen/big_spinner_width"
            android:layout_height="match_parent"
            android:entries="@array/temp_differ_select"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="℃"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_top"
        android:paddingLeft="@dimen/item_padding_left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="功率:"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size" />

        <Spinner
            android:id="@+id/power_picker"
            android:layout_marginLeft="@dimen/big_spinner_margin_left"
            android:layout_marginRight="@dimen/big_spinner_margin_right"
            android:layout_width="@dimen/big_spinner_width"
            android:layout_height="match_parent"
            android:entries="@array/power_select"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="档"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size" />

    </LinearLayout>
    </LinearLayout>
