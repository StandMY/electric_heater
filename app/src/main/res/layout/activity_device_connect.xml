<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.DeviceConnectActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/title_background">

        <Button
            android:id="@+id/bt_back_to_detail"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"

            android:background="@drawable/icon_back" />

        <TextView
            android:id="@+id/device_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="66dp"
            android:layout_marginLeft="66dp"
            android:layout_marginBottom="9dp"
            android:text="设备连接"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/text_black"
            android:textSize="25sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/device_name"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="餐&#160;&#160;厅"
        android:textSize="@dimen/text_size"
        android:textColor="@color/text_black"
        android:background="@drawable/textview_border"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="@string/wifi_hint"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fist_operation"
            android:textSize="@dimen/text_size"
            android:lineSpacingExtra="10dp"
            android:textColor="@color/text_black"/>

        <TextView
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_operation"
            android:textSize="@dimen/text_size"
            android:lineSpacingExtra="10dp"
            android:textColor="@color/text_black"/>

        <TextView
            android:id="@+id/wifi_account"
            android:layout_marginLeft="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="NoVideo"
            android:lineSpacingExtra="10dp"
            android:textColor="#444444"/>

        <EditText
            android:id="@+id/wifi_pw"
            android:layout_marginLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:paddingRight="20dp"
            android:hint="@string/wifiPw_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_black"/>

        <TextView
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/third_operation"
            android:textSize="@dimen/text_size"
            android:lineSpacingExtra="10dp"
            android:textColor="@color/text_black"/>

    </LinearLayout>




    <Button
        android:id="@+id/connect"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="@dimen/btn_width"
        android:text="@string/btn_pairing"
        android:background="@color/btn_background"
        android:textColor="@color/btn_textColor"
        android:textSize="@dimen/btn_text"
        android:layout_height="wrap_content"/>

</LinearLayout>