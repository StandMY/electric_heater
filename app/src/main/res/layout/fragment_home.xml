<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/home_item_bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/home_title"
            android:gravity="center_vertical|center_horizontal"
            android:text="设备状态"
            android:textColor="@color/home_title_text"
            android:textSize="@dimen/title_text_size" />

        <ImageView
            android:id="@+id/image_add_device"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="18dp"
            android:src="@drawable/image_add_device" />
    </RelativeLayout>

    <ListView
        android:id="@+id/device_item_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>