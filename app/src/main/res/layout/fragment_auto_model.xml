<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始:"
            android:textSize="@dimen/big_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/big_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时"
            android:textSize="@dimen/big_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/big_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分"
            android:textSize="@dimen/big_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束:"
            android:textSize="@dimen/big_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/big_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时"
            android:textSize="@dimen/big_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/big_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分"
            android:textSize="@dimen/big_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温度:"
            android:textColor="@color/text_black"
            android:textSize="@dimen/big_text_size" />

        <Spinner
            android:id="@+id/temperature_picker"
            android:layout_marginLeft="30dp"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:entries="@array/tempare_select"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="℃"
            android:textColor="@color/text_black"
            android:textSize="@dimen/big_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温差:"
            android:textColor="@color/text_black"
            android:textSize="@dimen/big_text_size" />

        <Spinner
            android:id="@+id/temper_differ_picker"
            android:layout_marginLeft="30dp"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:entries="@array/temp_differ_select"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="℃"
            android:textColor="@color/text_black"
            android:textSize="@dimen/big_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="功率:"
            android:textColor="@color/text_black"
            android:textSize="@dimen/big_text_size" />

        <Spinner
            android:id="@+id/power_picker"
            android:layout_marginLeft="30dp"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:entries="@array/power_select"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:text="档"
            android:textColor="@color/text_black"
            android:textSize="@dimen/big_text_size" />

    </LinearLayout>

    <Button
        android:id="@+id/auto_mode_apply"
        android:layout_width="@dimen/small_btn_width"
        android:layout_height="wrap_content"
        android:text="应用"
        android:textColor="@color/white"
        android:textSize="@dimen/btn_text"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@color/btn_background" />

</LinearLayout>
